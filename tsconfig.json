{
  "include": ["./src/**/*","tests/**/*"],
  "exclude": ["node_modules","dist"],
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "baseUrl": ".",
    "composite": true,
    "moduleResolution": "Node16",
    "target": "ES2020",
    "module": "Node16" ,
    "incremental": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "pretty": true,
    "outDir": "./dist",
    "declarationMap": true,
    "allowJs": true
  },
  "ts-node": {
    "swc": true,
  }
}
